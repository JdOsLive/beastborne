<root class="@(IsVisible ? "visible" : "")">
	<div class="help-overlay" onclick=@Hide></div>
		<div class="help-panel">
			<div class="help-header">
				<span class="help-title">Game Guide</span>
				<button class="close-btn" onclick=@Hide><img class="close-icon" src="ui/icons/buttons/close.svg" /></button>
			</div>

			<!-- Body: Sidebar + Content -->
			<div class="help-body">
				<!-- Sidebar with vertical tabs -->
				<div class="help-sidebar">
					@foreach (var category in Categories)
					{
						<div class="sidebar-btn @(currentCategory == category.Id ? "active" : "")"
							 onclick=@(() => SelectCategory(category.Id))>
							<div class="sidebar-icon">@category.Icon</div>
							<div class="sidebar-label">@category.Name</div>
						</div>
					}
				</div>

				<!-- Content Area -->
				<div class="content-area">
					<div class="content-inner" @ref="ContentInner">
						@switch (currentCategory)
						{
							case "getting-started":
								@RenderGettingStarted()
								break;
							case "beasts":
								@RenderBeasts()
								break;
							case "elements":
								@RenderElements()
								break;
							case "combat":
								@RenderCombat()
								break;
							case "contracts":
								@RenderContracts()
								break;
							case "breeding":
								@RenderBreeding()
								break;
							case "skills":
								@RenderSkills()
								break;
							case "expeditions":
								@RenderExpeditions()
								break;
							case "inventory":
								@RenderInventory()
								break;
							case "resources":
								@RenderResources()
								break;
							case "online":
								@RenderOnline()
								break;
							case "achievements":
								@RenderAchievements()
								break;
						}
					</div>
				</div>
			</div>
		</div>
</root>

