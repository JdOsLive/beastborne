	protected override void OnAfterTreeRender(bool firstTime)
	{
		if (firstTime)
		{
			Instance = this;
		}
	}

	public static void Show()
	{
		if (Instance != null)
		{
			Instance.IsVisible = true;
			Instance.currentCategory = "getting-started";
			SoundManager.PlayPopup();
		}
	}

	public static void ShowCategory(string categoryId)
	{
		if (Instance != null)
		{
			Instance.IsVisible = true;
			Instance.currentCategory = categoryId;
			Instance.ContentInner?.ScrollOffset = new Vector2(0, 0);
			SoundManager.PlayForward();
		}
	}

	public void Hide()
	{
		IsVisible = false;
		SoundManager.PlayPopdown();
	}

	public override void Tick()
	{
		base.Tick();
		if (IsVisible && Input.Pressed("Escape"))
			Hide();
	}

	private void SelectCategory(string categoryId)
	{
		if (currentCategory != categoryId)
		{
			currentCategory = categoryId;
			SoundManager.PlayClick();

			// Scroll content to top when switching pages
			if (ContentInner != null)
			{
				ContentInner.ScrollOffset = new Vector2(0, 0);
			}
		}
	}

	protected override int BuildHash()
	{
		return HashCode.Combine(IsVisible, currentCategory);
	}

